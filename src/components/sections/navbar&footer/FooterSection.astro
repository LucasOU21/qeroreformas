      <!-- Navigation links column -->
      <div class="col-span-1">
        <h3 class="font-bold text-neutral-800 dark:text-neutral-200 text-center md:text-left mb-6">
          Servicios
        </h3>
        <ul class="grid grid-cols-1 gap-3 text-center md:text-left">
          <li>
            <a href="/servicios/montaje-muebles" class="text-neutral-700 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors">
              Montaje de muebles
            </a>
          </li>
          <li>
            <a href="/servicios/diseno-muebles" class="text-neutral-700 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors">
              Diseño de muebles a medida
            </a>
          </li>
          <li>
            <a href="/servicios/cocinas" class="text-neutral-700 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors">
              Instalación de cocinas
            </a>
          </li>
          <li>
            <a href="/servicios/reformas" class="text-neutral-700 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors">
              Reformas integrales
            </a>
          </li>
          <li>
            <a href="/servicios/manitas" class="text-neutral-700 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors">
              Servicio de manitas
            </a>
          </li>
        </ul>
      </div>

      <!-- Social media and location column -->
      <div class="col-span-1">
        <h3 class="font-bold text-neutral-800 dark:text-neutral-200 text-center md:text-left mb-6">
          Ubicación
        </h3>
        <div class="flex flex-col space-y-3 text-center md:text-left">
